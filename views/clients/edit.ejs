<div class="container">
  <h2>Edit Client</h2>
  <form action="/clients/<%= clientObj.client_id %>" method="POST">
    <div class="mb-3">
      <label for="client_lastname" class="form-label">Last Name</label>
      <input type="text" class="form-control" id="client_lastname" name="client_lastname" value="<%= clientObj.client_lastname %>" required>
    </div>
    <div class="mb-3">
      <label for="client_surname" class="form-label">Surname</label>
      <input type="text" class="form-control" id="client_surname" name="client_surname" value="<%= clientObj.client_surname %>">
    </div>
    <div class="mb-3">
      <label for="client_address" class="form-label">Address</label>
      <input type="text" class="form-control" id="client_address" name="client_address" value="<%= clientObj.client_address %>">
    </div>
    <div class="mb-3">
      <label for="client_postcode" class="form-label">Postcode</label>
      <input type="text" class="form-control" id="client_postcode" name="client_postcode" value="<%= clientObj.client_postcode %>">
    </div>
    <div class="mb-3">
      <label for="client_mobile" class="form-label">Mobile</label>
      <input type="text" class="form-control" id="client_mobile" name="client_mobile" value="<%= clientObj.client_mobile %>">
    </div>
    <div class="mb-3">
      <label for="client_email" class="form-label">Email</label>
      <input type="email" class="form-control" id="client_email" name="client_email" value="<%= clientObj.client_email %>">
    </div>
    <div class="mb-3">
      <label for="remark" class="form-label">Remark</label>
      <textarea class="form-control" id="remark" name="remark" rows="3"><%= clientObj.remark %></textarea>
    </div>
    <div class="mb-3">
      <label for="status" class="form-label">Status</label>
      <select class="form-select" id="status" name="status" required>
        <option value="Valid" <%= clientObj.status === 'Valid' ? 'selected' : '' %>>Valid</option>
        <option value="Invalid" <%= clientObj.status === 'Invalid' ? 'selected' : '' %>>Invalid</option>
      </select>
    </div>
    <button type="submit" class="btn btn-primary">Update Client</button>
  </form>
</div>