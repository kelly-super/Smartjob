<div class="table-responsive">
  <div class="d-flex justify-content-between mb-3">
    <h2>Clients</h2>
    <div>
      <a href="/clients/new" class="btn btn-primary me-2">Add New Client</a>
      <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#importModal">
        Import Clients
      </button>
    </div>
  </div>

  <!-- Import Modal -->
  <div class="modal fade" id="importModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Import Clients</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form action="/clients/import" method="post" enctype="multipart/form-data">
            <div class="mb-3">
              <label class="form-label">Select CSV File</label>
              <input type="file" class="form-control" name="clientsFile" accept=".csv" required>
              <div class="form-text">
                CSV should include columns: client_lastname, client_surname, client_mobile, 
                client_email, client_address, client_postcode, remark
              </div>
            </div>
            <button type="submit" class="btn btn-primary">Import</button>
            <a href="/clients/template" class="btn btn-outline-secondary">Download Template</a>
          </form>
        </div>
      </div>
    </div>
  </div>

  <table class="table table-striped table-hover">
  <thead class="thead-dark">
     
        <tr>
          
          <th>Last Name</th>
          <th>Surname</th>
          <th>Address</th>
          <th>Postcode</th>
          <th>Mobile</th>
          <th>Email</th>
          <th>Remark</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% clients.forEach(client => { %>
          <tr onclick="window.location.href='/clients/<%= client.client_id %>'" style="cursor: pointer;">
            
            
            <td><%= client.client_lastname %></td>
            <td><%= client.client_surname %></td>
            <td><%= client.client_address %></td>
            <td><%= client.client_postcode %></td>
            <td><%= client.client_mobile %></td>
            <td><%= client.client_email || 'N/A' %></td>
            <td><%= client.remark %></td>
            <td>
              <a href="/clients/<%= client.client_id %>/edit" class="btn btn-sm btn-warning">Edit</a>
              <form action="/clients/<%= client.client_id %>/delete" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this client?')">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

  </div>