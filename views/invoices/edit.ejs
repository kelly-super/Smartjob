<div class="card">
    <div class="card-header">
        <h4 class="card-title">Edit Invoice #<%= invoice.invoice_number %></h4>
    </div>
    <div class="card-body">
        <form id="edit-invoice-form" action="/invoices/<%= invoice.invoice_id %>" method="POST">
            <div class="row g-3">
                <!-- Invoice Details -->
                <div class="col-md-3">
                    <label class="form-label">Invoice Number</label>
                    <input type="text" 
                           class="form-control" 
                           value="<%= invoice.invoice_number %>"
                           readonly>
                </div>

                <div class="col-md-3">
                    <label class="form-label">Issue Date*</label>
                    <input type="date" 
                           class="form-control" 
                           name="issue_date"
                           value="<%= invoice.issue_date.split('T')[0] %>"
                           required>
                </div>

                <div class="col-md-3">
                    <label class="form-label">Due Date*</label>
                    <input type="date" 
                           class="form-control" 
                           name="due_date"
                           value="<%= invoice.due_date.split('T')[0] %>"
                           required>
                </div>

                <div class="col-md-3">
                    <label class="form-label">Status</label>
                    <select class="form-select" name="status">
                        <option value="Unpaid" <%= invoice.status === 'Unpaid' ? 'selected' : '' %>>Unpaid</option>
                        <option value="Partially Paid" <%= invoice.status === 'Partially Paid' ? 'selected' : '' %>>Partially Paid</option>
                        <option value="Paid" <%= invoice.status === 'Paid' ? 'selected' : '' %>>Paid</option>
                    </select>
                </div>

                <!-- Client Selection -->
                <div class="col-md-6">
                    <label class="form-label">Client*</label>
                    <select class="form-select" name="client_id" required>
                        <option value="">Select Client</option>
                        <% clients.forEach(client => { %>
                            <option value="<%= client.client_id %>" 
                                    <%= client.client_id === invoice.client_id ? 'selected' : '' %>>
                                <%= client.client_lastname %> <%= client.client_surname %>
                            </option>
                        <% }); %>
                    </select>
                </div>

                <!-- Items Table -->
                <div class="col-12 mt-4">
                    <h5 class="border-bottom pb-2">Invoice Items</h5>
                    <div class="table-responsive">
                        <table class="table table-bordered" id="items-table">
                            <thead>
                                <tr>
                                    <th>Item</th>
                                    <th>Description</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Discount</th>
                                    <th>Total</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% invoice_items.forEach((item, index) => { %>
                                    <tr>
                                        <td>
                                            <input type="text" 
                                                   class="form-control" 
                                                   name="items[<%= index %>][name]" 
                                                   value="<%= item.item_name %>"
                                                   required>
                                            <input type="hidden" 
                                                   name="items[<%= index %>][id]" 
                                                   value="<%= item.invoice_item_id %>">
                                        </td>
                                        <td>
                                            <input type="text" 
                                                   class="form-control" 
                                                   name="items[<%= index %>][description]"
                                                   value="<%= item.item_description %>">
                                        </td>
                                        <td>
                                            <input type="number" 
                                                   class="form-control item-price" 
                                                   name="items[<%= index %>][price]" 
                                                   value="<%= item.item_price %>"
                                                   step="0.01" 
                                                   required 
                                                   onchange="calculateTotal(this)">
                                        </td>
                                        <td>
                                            <input type="number" 
                                                   class="form-control item-quantity" 
                                                   name="items[<%= index %>][quantity]" 
                                                   value="<%= item.item_quantity %>"
                                                   min="1" 
                                                   required 
                                                   onchange="calculateTotal(this)">
                                        </td>
                                        <td>
                                            <input type="number" 
                                                   class="form-control item-discount" 
                                                   name="items[<%= index %>][discount]" 
                                                   value="<%= item.item_discount_price || 0 %>"
                                                   step="0.01" 
                                                   onchange="calculateTotal(this)">
                                        </td>
                                        <td>
                                            <input type="number" 
                                                   class="form-control item-total" 
                                                   name="items[<%= index %>][total]"
                                                   value="<%= item.item_total_price %>"
                                                   readonly>
                                        </td>
                                        <td>
                                            <button type="button" 
                                                    class="btn btn-sm btn-danger"
                                                    onclick="removeItem(this)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="7">
                                        <button type="button" 
                                                class="btn btn-sm btn-success" 
                                                onclick="addItem()">
                                            <i class="bi bi-plus-lg"></i> Add Item
                                        </button>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>

                <!-- Totals -->
                <div class="col-md-4 offset-md-8">
                    <div class="card bg-light">
                        <div class="card-body">
                            <div class="row g-2">
                                <div class="col-6">Subtotal:</div>
                                <div class="col-6 text-end" id="subtotal">
                                    $<%= (invoice.total_amount - invoice.tax_amount).toFixed(2) %>
                                </div>
                                
                                <div class="col-6">GST (15%):</div>
                                <div class="col-6 text-end" id="gst">
                                    $<%= invoice.tax_amount.toFixed(2) %>
                                </div>
                                
                                <div class="col-6 fw-bold">Total:</div>
                                <div class="col-6 text-end fw-bold" id="total">
                                    $<%= invoice.total_amount.toFixed(2) %>
                                </div>
                                
                                <input type="hidden" name="total_amount" id="total_amount" value="<%= invoice.total_amount %>">
                                <input type="hidden" name="tax_amount" id="tax_amount" value="<%= invoice.tax_amount %>">
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Notes -->
                <div class="col-12">
                    <label class="form-label">Notes</label>
                    <textarea class="form-control" 
                             name="notes" 
                             rows="3"><%= invoice.notes %></textarea>
                </div>

                <!-- Submit -->
                <div class="col-12 text-end">
                    <a href="/invoices" class="btn btn-secondary me-2">Cancel</a>
                    <button type="submit" class="btn btn-primary">Update Invoice</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
// ... (same JavaScript functions as new.ejs) ...
</script>