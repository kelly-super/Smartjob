<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4>Suppliers</h4>

        </div>

        <div class="row align-items-center mb-3">
            <div class="col-md-8 col-12 mb-2 mb-md-0">
                <form>
                    <div class="input-group">
                        <input type="text" name="search" class="form-control" 
                            placeholder="Search suppliers..." value="<%= typeof search !== 'undefined' ? search : '' %>">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Search
                        </button>
                    </div>
                </form>
            </div>
            <div class="col-md-4 col-12 text-md-end">
                <a href="/suppliers/new" class="btn btn-success w-100 w-md-auto">
                    <i class="bi bi-plus-lg"></i> New Supplier
                </a>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Contact</th>
                        <th class="d-none d-md-table-cell">Phone</th>
                        <th class="d-none d-md-table-cell">Email</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (typeof suppliers !== 'undefined' && suppliers.length > 0) { %>
                        <% suppliers.forEach(supplier => { %>
                            <tr>
                                <td><%= supplier.supplier_name %></td>
                                <td><%= supplier.supplier_contact_name %></td>
                                <td class="d-none d-md-table-cell"><%= supplier.supplier_contact_phone %></td>
                                <td class="d-none d-md-table-cell"><%= supplier.supplier_email %></td>
                                <td>
                                    <span class="badge bg-<%= supplier.status === 'Valid' ? 'success' : 'danger' %>">
                                        <%= supplier.status %>
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="/suppliers/<%= supplier.supplier_id %>" class="btn btn-sm btn-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="/suppliers/<%= supplier.supplier_id %>/edit" class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form action="/suppliers/<%= supplier.supplier_id %>/delete" method="POST" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-danger" 
                                                onclick="return confirm('Are you sure you want to delete this supplier?')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="text-center">No suppliers found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
