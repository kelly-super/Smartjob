
    <div class="card-header d-flex justify-content-between align-items-center">
        
        <a href="/suppliers/new" class="btn btn-primary btn-sm">
            <i class="bi bi-plus-lg"></i> New Supplier
        </a>
    </div>
    <div class="card-body">
        <form class="mb-4">
            <div class="input-group">
                <input type="text" name="search" class="form-control" 
                    placeholder="Search suppliers..." value="<%= typeof search !== 'undefined' ? search : '' %>">
                <button type="submit" class="btn btn-outline-secondary">
                    <i class="bi bi-search"></i> Search
                </button>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    
                        <th>Name</th>
                        <th>Contact</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (typeof suppliers !== 'undefined' && suppliers.length > 0) { %>
                        <% suppliers.forEach(supplier => { %>
                            <tr onclick="window.location.href='/suppliers/<%= supplier.supplier_id %>'" style="cursor: pointer;">
                            <td><%= supplier.supplier_name %></td>
                            <td><%= supplier.supplier_contact_name %></td>
                            <td><%= supplier.supplier_contact_phone %></td>
                            <td><%= supplier.supplier_email %></td>
                            <td>
                                <span class="badge bg-<%= supplier.status === 'Valid' ? 'success' : 'danger' %>">
                                    <%= supplier.status %>
                                </span>
                            </td>
                            <td>
                                <a href="/suppliers/<%= supplier.supplier_id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                                
                                <form action="/suppliers/<%= supplier.supplier_id %>/delete" method="POST" style="display: inline;">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this supplier?')">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="5" class="text-center">No suppliers found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
