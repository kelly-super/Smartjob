<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4>Supplier Details</h4>
        <div>
            <a href="/suppliers/<%= supplier.supplier_id %>/edit" class="btn btn-warning btn-sm">
                <i class="bi bi-pencil"></i> Edit
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h5>Basic Information</h5>
                <dl class="row">
                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8"><%= supplier.supplier_name %></dd>

                    <dt class="col-sm-4">Contact Person:</dt>
                    <dd class="col-sm-8"><%= supplier.supplier_contact_name %></dd>
                    <dt class="col-sm-4">Contact Phone:</dt>
                    <dd class="col-sm-8"><%= supplier.supplier_contact_phone %></dd>

                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8"><%= supplier.supplier_email %></dd>

                    <dt class="col-sm-4">Website:</dt>
                    <dd class="col-sm-8">
                        <% if (supplier.supplier_website) { %>
                            <a href="<%= supplier.supplier_website %>" target="_blank">
                                <%= supplier.supplier_website %>
                            </a>
                        <% } %>
                    </dd>
                </dl>
            </div>

            <div class="col-md-6">
                <h5>Address Information</h5>
                <dl class="row">
                    <dt class="col-sm-4">Physical Address:</dt>
                    <dd class="col-sm-8"><%= supplier.supplier_address %></dd>

                    <dt class="col-sm-4">Postal Address:</dt>
                    <dd class="col-sm-8"><%= supplier.supplier_postaddress %></dd>
                </dl>
            </div>
        </div>

        <div class="mt-4">
            <a href="/suppliers" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>