<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h4>User Details</h4>
            <div class="btn-group">
                <a href="/users/<%= user.user_id %>/edit" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Edit
                </a>
            </div>
        </div>
    </div>
    
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">User Code:</dt>
                    <dd class="col-sm-8"><%= user.user_code %></dd>
                    
                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8"><%= user.user_name %></dd>
                    
                    <dt class="col-sm-4">Role:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-primary"><%= user.user_role || 'User' %></span>
                    </dd>
                </dl>
            </div>
            
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-<%= user.status === 'Valid' ? 'success' : 'danger' %>">
                            <%= user.status %>
                        </span>
                    </dd>
                    
                    <dt class="col-sm-4">Created:</dt>
                    <dd class="col-sm-8">
                        <%= new Date(user.create_date).toLocaleString() %>
                    </dd>
                    
                    <dt class="col-sm-4">Last Updated:</dt>
                    <dd class="col-sm-8">
                        <%= user.update_date ? new Date(user.update_date).toLocaleString() : 'Never' %>
                    </dd>
                </dl>
            </div>
        </div>

        <div class="mt-4">
            <a href="/users" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>