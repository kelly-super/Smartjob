
  <div class="table-responsive">
    <a href="/users/new" class="btn btn-primary mb-3">Add New Users</a>
    <table class="table table-striped table-hover">
    <thead class="thead-dark">
      <tr>
        <th>User_Code</th>
        <th>User_Name</th>
        <th>CreateTime</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr onclick="window.location.href='/users/<%= user.user_id %>'" style="cursor: pointer;">
          <td><%= user.user_code %></td>
          <td><%= user.user_name %></td>
          <td><%= user.create_date %></td>
          <td><%= user.status %></td>
          
          <td>
            <a href="/users/<%= user.user_id %>/edit" class="btn btn-sm btn-warning">Edit</a>
            <form action="/users/<%= user.user_id %>/delete" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
            </form>
        </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  </div>
