
  <div class="table-responsive">
    <a href="/jobs/new" class="btn btn-primary mb-3">Add New Job</a>
    <table class="table table-striped table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Category</th>
        <th>Description</th>
        <th>Price</th>
        <th>Status</th>
        <th>Start_Date</th>
        <th>Complete_Date</th>
        <th>Email</th>
        <th>Job_Notes</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% jobs.forEach(job => { %>
        <tr onclick="window.location.href='/jobs/<%= job.job_id %>'" style="cursor: pointer;">
          <td><%= job.job_category %></td>
          <td><%= job.job_description %></td>
          <td><%= job.job_price %></td>
          <td><%= job.job_status %></td>
          <td><%= job.job_startdate %></td>
          <td><%= job.job_completedate %></td>
          <td><%= job.client_id %></td>
          <td><%= job.job_notes %></td>
          <td>
            <a href="/jobs/<%= job.job_id %>/edit" class="btn btn-sm btn-warning">Edit</a>
            <form action="/jobs/<%= job.job_id %>/delete" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this job?')">Delete</button>
            </form>
        </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  </div>
